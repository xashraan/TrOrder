								</Select>
							</items>
						</FlexBox>
					</Panel>
				</content>
				<footer>
					<Toolbar class="toolbarClass searchOrderToolbar">
						<Button text="{i18n>searchresultsText}" press="onPressContinue" class="continueBtnClass"></Button>
